{
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "My Extension"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["src/content-script/index.ts"],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*/*"],
  "manifest_version": 3,
  "name": "Arc Fav",
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "activeTab",
    "bookmarks",
    "favicon",
    "contextMenus",
    "tabs"
  ],
  "version": "1.0.0",
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["src/content-script/index.ts", "_favicon/*"]
    }
  ],
  "icons": {
    "16": "public/logo.png",
    "48": "public/logo.png",
    "128": "public/logo.png"
  }
}
